	<!-- tx -->
	<tx:annotation-driven transaction-manager="public_Txm" />
	<bean id="public_Txm" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="public_DataSource" />
	</bean>
</beans>